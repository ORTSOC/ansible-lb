{% for group in lb_groups %}
frontend {{ group.name }}
	bind *:{{ group.listening_port }} {% if haproxy_cert %}ssl crt /etc/haproxy/haproxy_cert.pem verify none{% endif %}
	mode {{ group.mode }}
	{% if stats_path %}
	stats uri {{ stats_path }}?{{ group.name }}
	{% endif %}
	default_backend http_back

backend {{ group.name }}
	mode {{ group.mode }}
	balance roundrobin
{% for endpoint in group.endpoints %}
	server {{ endpoint.name }} {{ endpoint.addr }}:{{ endpoint.port }} check
{% endfor %}
{% endfor %}